<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/login_background"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_login"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_startgame"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_press"
        android:gravity="center"
        android:text="开始游戏"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_icon"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_endgame"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_startgame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/finish_press"
        android:gravity="center"
        android:text="退出游戏"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/btn_connect"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/settings" />
    
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textColor="@color/alpha_black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_checkkey"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_above="@id/btn_connect"
        android:layout_marginBottom="20dp"
        android:text="检测"
        android:visibility="gone"
        android:textColor="@color/alpha_black"
        android:textSize="16sp"
        />

</RelativeLayout>
